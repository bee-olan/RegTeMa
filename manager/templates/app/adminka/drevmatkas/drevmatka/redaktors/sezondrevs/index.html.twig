{% extends 'base.html.twig' %}

{% block title %}Сезоны{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Главная</a></li>
        <li class="breadcrumb-item"><a href="{{ path('adminka') }}">Пасека</a></li>
        <li class="breadcrumb-item"><a href="{{ path('adminka.matkas') }}">ПлемМатки</a></li>
        <li class="breadcrumb-item"><a href="{{ path('adminka.matkas.plemmatka.show', {'id': plemmatka.id}) }}">{{ plemmatka.name }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('adminka.matkas.plemmatka.redaktors', {'plemmatka_id': plemmatka.id}) }}">Редактирование</a></li>
        <li class="breadcrumb-item active">Сезон</li>
    </ol>
{% endblock %}

{% block body %}

    {{ include('app/adminka/drevmatkas/_tabs.html.twig') }}

    {% include 'app/adminka/drevmatkas/drevmatka/redaktors/_tabs.html.twig' %}


    <div class="controls">
        <a href="{{ path('adminka.drevmatkas.drevmatka.redaktors.sezondrevs.create', {'plemmatka_id': plemmatka.id}) }}"
           class="btn btn-success">Добавить СЕЗОН для племМатки</a>
    </div>

    <div class="box">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Сезон</th>
                <th>Участники</th>
                <th></th>
            </tr>
            <tbody>
            {% set token = csrf_token('delete') %}
            {% for sezonDrev in sezonDrevs %}
                <tr>
                    <td>{{ sezonDrev.name }}</td>
{#                    <td>{{ department.uchasties_count }}</td>#}
                    <td>
                        <div class="d-flex flex-row">
                            <a href="{{ path('adminka.drevmatkas.drevmatka.redaktors.sezondrevs.edit', {'plemmatka_id': plemmatka.id, 'id': sezonDrev.id}) }}" class="btn btn-sm btn-primary mr-1"><span class="fa fa-pencil"></span></a>
                            <form action="{{ path('adminka.drevmatkas.drevmatka.redaktors.sezondrevs.delete', {'plemmatka_id': plemmatka.id, 'id': sezonDrev.id}) }}" method="post" onsubmit="return confirm('Are you sure?')">
                                <input type="hidden" name="token" value="{{ token }}" />
                                <button type="submit" class="btn btn-sm btn-danger"><span class="fa fa-times"></span></button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}