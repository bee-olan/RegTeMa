{% extends 'base.html.twig' %}

{% block title %}{{ plemmatka.name }}{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Главная</a></li>
        <li class="breadcrumb-item"><a href="{{ path('adminka') }}">Пасека</a></li>
        <li class="breadcrumb-item"><a href="{{ path('adminka.matkas') }}">ПлемМатки</a></li>
        <li class="breadcrumb-item"><a href="{{ path('adminka.matkas.plemmatka.show', {'id': plemmatka.id}) }}">{{ plemmatka.name }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('adminka.matkas.plemmatka.redaktors', {'plemmatka_id': plemmatka.id}) }}">Редактирование</a></li>
        <li class="breadcrumb-item active">Участие</li>
    </ol>
{% endblock %}

{% block body %}

    {{ include('app/adminka/drevmatkas/_tabs.html.twig') }}

    {% include 'app/adminka/drevmatkas/drevmatka/redaktors/_tabs.html.twig' %}

    <div class="controls">
        <a href="{{ path('adminka.drevmatkas.drevmatka.redaktors.uchasties.assign', {'plemmatka_id': plemmatka.id}) }}"
           class="btn btn-success">Прикрепить участника</a>
{#        <a href="{{ path('adminka.matkas.roles') }}" class="btn btn-primary">Роли</a>#}
    </div>

    <div class="box">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Ник ( Имя )</th>
                <th>Сезон</th>
                <th>Роль</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% set token = csrf_token('revoke') %}
            {% for uchasdrev in uchasdrevs %}
                <tr>
                    <td>
                        <a href="{{ path('adminka.uchasties.show', {'id': uchasdrev.uchastie.id}) }}" target="_blank" class="pull-right"><span class="fa fa-external-link"></span></a>
                        {{ uchasdrev.uchastie.nike }}   ( {{ uchasdrev.uchastie.name.full }} )
                    </td>
                    <td>
                        <ul class="list-unstyled my-0">
                            {% for sezondrev in uchasdrev.sezondrevs %}
                                <li>{{ sezondrev.name }}</li>
                            {% endfor %}
                        </ul>
                    </td>
{#                    <td>#}
{#                        <ul class="list-unstyled my-0">#}
{#                            {% for role in uchasdrev.roles %}#}
{#                                <li>{{ role.name }}</li>#}
{#                            {% endfor %}#}
{#                        </ul>#}
{#                    </td>#}
                    <td>
                        <div class="d-flex flex-row">
                            <a href="{{ path('adminka.matkas.plemmatka.redaktors.uchasties.edit', {'plemmatka_id': plemmatka.id, 'uchastie_id': uchasdrev.uchastie.id}) }}"
                               class="btn btn-sm btn-primary mr-1"><span class="fa fa-pencil"></span></a>
                            <form action="{{ path('adminka.matkas.plemmatka.redaktors.uchasties.revoke', {'plemmatka_id': plemmatka.id, 'uchastie_id': uchasdrev.uchastie.id}) }}" method="post" onsubmit="return confirm('Are you sure?')">
                                <input type="hidden" name="token" value="{{ token }}" />
                                <button type="submit" class="btn btn-sm btn-danger"><span class="fa fa-times"></span></button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}