{% extends 'base.html.twig' %}

{% block title %}Участники{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Главная</a></li>
        <li class="breadcrumb-item"><a href="{{ path('paseka.pchelowods') }}">Работа</a></li>
        <li class="breadcrumb-item"><a href="{{ path('paseka.pchelowods') }}">Участники</a></li>
    </ol>
{% endblock %}

{% block body %}

    {{ include('app/paseka/pchelowods/_tabs.html.twig') }}

    <div class="card">
        <div class="card-body">

            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-2">{{ form_widget(form.name) }}</div>
                <div class="col-md-2">{{ form_widget(form.email) }}</div>
                <div class="col-md-2">{{ form_widget(form.group) }}</div>
                <div class="col-md-2">{{ form_widget(form.status) }}</div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Фильтр</button>
                    <a href="{{ path('paseka.pchelowods') }}" class="btn btn-outline-secondary">Сбросить</a>
                </div>
            </div>
            {{ form_end(form) }}

        </div>
    </div>

    <div class="box">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Ф.И. или Ник', 'name') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Эл-почта', 'email') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Группа', 'group') }}</th>
                <th>Projects - Раса</th>
                <th>{{ knp_pagination_sortable(pagination, 'Статус', 'status') }}</th>
            </tr>
            </thead>
            <tbody>
            {% for pchelowod in pagination %}
                <tr>
                    <td><a href="{{ path('paseka.pchelowods.show', {'id': pchelowod.id}) }}">{{ pchelowod.name }}</a></td>
                    <td>{{ pchelowod.email }}</td>
                    <td>{{ pchelowod.group }}</td>
                    <td>-------------------</td>
                    {# <td>{{ pchelowod.memberships_count }}</td> #}
                    <td>{{ pchelowod_status(pchelowod.status) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}