{% extends 'base.html.twig' %}

{% block title %}{{ rasa.name }}{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('paseka') }}">Пасека</a></li>
        <li class="breadcrumb-item"><a href="{{ path('paseka.rasas') }}">Раса</a></li>
        <li class="breadcrumb-item"><a href="{{ path('paseka.rasas.rasa.show', {'id': rasa.id}) }}">{{ rasa.name }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('paseka.rasas.rasa.settings', {'rasa_id': rasa.id}) }}">Редактировать</a></li>
        <li class="breadcrumb-item active">Пчеловод</li>
    </ol>
{% endblock %}

{% block body %}

    {% include 'app/paseka/rasas/rasa/_tabs-r.html.twig' %} 

    {% include 'app/paseka/rasas/rasa/settings/_tabs-s.html.twig' %} 

    <div class="controls">
        <a href="{{ path('paseka.rasas.rasa.settings.pchelowods.assign', {'rasa_id': rasa.id}) }}" class="btn btn-success">Назначить Участника</a>
        {# <a href="{{ path('paseka.rasas.linias') }}" class="btn btn-primary">Roles</a> #}
        Roles
    </div>

    <div class="box">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Название расы</th>
                <th>Линия</th>
                <th>Категория</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% set token = csrf_token('revoke') %}
            {% for pcheloship in pcheloships %}
                <tr>
                    <td>
                        <a href="{{ path('paseka.pchelowods.show', {'id': pcheloship.pchelowod.id}) }}" target="_blank" class="pull-right"><span class="fa fa-external-link"></span></a>
                        {{ pcheloship.pchelowod.name.full }}
                    </td>
                    <td>
                        <ul class="list-unstyled my-0">
                            {% for linia in pcheloship.linias %}
                                <li>{{ linia.name }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td>
                        <ul class="list-unstyled my-0">
                            {% for linia in pcheloship.linias %}
                                <li>{{ linia.name }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td>
                        <div class="d-flex flex-row">
                            <a href="{{ path('paseka.rasas.rasa.settings.pchelowods.edit', {'rasa_id': rasa.id, 'pchelowod_id': pcheloship.pchelowod.id}) }}" class="btn btn-sm btn-primary mr-1"><span class="fa fa-pencil"></span></a>
                            <form action="{{ path('paseka.rasas.rasa.settings.pchelowods.revoke', {'rasa_id': rasa.id, 'pchelowod_id': pcheloship.pchelowod.id}) }}" method="post" onsubmit="return confirm('Are you sure?')">
                                <input type="hidden" name="token" value="{{ token }}" />
                                <button type="submit" class="btn btn-sm btn-danger"><span class="fa fa-times"></span></button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}