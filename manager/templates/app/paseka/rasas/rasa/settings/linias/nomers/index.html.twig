            <tbody>
            {% set token = csrf_token('delete') %}
             {% for nomer in nomers %}
                <tr>
                    <td>{{ nomer.sort_nomer }}</td>
                    <td>{{ nomer.name }}</td>
                    <td>{{ nomer.name_star }}</td>
                   <td>{{ nomer.title }}</td>
                   <td>
                        <div class="d-flex flex-row">
                            <a href="{{ path('paseka.rasas.rasa.settings.linias.nomers.edit', {'linia_id': linia.id, 'id': nomer.id}) }}" class="btn btn-sm btn-primary mr-1"><span class="fa fa-pencil"></span></a>
