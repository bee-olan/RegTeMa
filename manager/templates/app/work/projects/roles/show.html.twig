{% extends 'base.html.twig' %}

{% block title %}Роли{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Главная</a></li>
        <li class="breadcrumb-item"><a href="{{ path('work') }}">Работа</a></li>
        <li class="breadcrumb-item"><a href="{{ path('work.projects') }}">Проекты</a></li>
        <li class="breadcrumb-item"><a href="{{ path('work.projects.roles') }}">Роли</a></li>
        <li class="breadcrumb-item active">{{ role.name }}</li>
    </ol>
{% endblock %}

{% block body %}

    {{ include('app/work/projects/_tabs.html.twig') }}

    <div class="controls">
        <a href="{{ path('work.projects.roles.edit', {'id': role.id}) }}" class="btn btn-primary">Edit</a>
        <form action="{{ path('work.projects.roles.delete', {'id': role.id}) }}" method="post" onsubmit="return confirm('Are you sure?')">
            <input type="hidden" name="token" value="{{ csrf_token('delete') }}" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <a href="{{ path('work.projects.roles.copy', {'id': role.id}) }}" class="btn btn-primary">Copy</a>
    </div>

    <div class="box">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ role.name }}</td>
                </tr>
                <tr>
                    <th>Permissions</th>
                    <td>
                        <ul class="list-unstyled my-0">
                            {% for permission in role.permissions %}
                                <li>{{ permission.name|trans({}, 'work_permissions') }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

{% endblock %}