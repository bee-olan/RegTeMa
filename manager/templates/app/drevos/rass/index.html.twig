{% extends 'base.html.twig' %}

{% block title %}Раса{% endblock %}


    {% block kroxii %}
        <a href="{{ path('home') }}">Главная</a>
        <a href="{{ path('drevos.rass') }}">Родословная</a>
        <span class="aktiv ">Расы</span>
    {% endblock %}

{% block body %}

    {{ include('app/drevos/_tabs.html.twig') }}



    {% set token = csrf_token('delete') %}

    <div class="box">
       
        <b class="dre_title  ">Расы зарегистрированные в БД </b>
        <table class="table table-bordered table-hover">
            <thead>
            <tr>

                <th> Название расы</th>
                <th>Сокращено</th>
                <th colspan="2"> редак-ть / удалить</th>
                <th colspan="3">Родословные (к-во)</th>


            </tr>
            </thead>
            <tbody>
            {% for raca in rasas %}
                <tr>
                {% if  raca.name != "-- нет нужной"  %}

                    <td>{{ raca.title }}</td>

                    <td>{{ raca.name }}</td>

                    <td> <a href="{{ path('drevos.rass.edit', {'id': raca.id}) }}"
                            class="btnn btnn--mb0 btnn--pt btnn--rasa"><span class="fa fa-pencil"></span></a>
                    </td>
                    <td>
                        <form action="{{ path('drevos.rass.delete', {'id': raca.id}) }}"
                              method="post" onsubmit="return confirm('Подтверждаете - удалить?')">
                            <input type="hidden" name="token" value="{{ token }}" />
                            <button type="submit" class="btnn btnn--mb0 btnn--pt btnn--rasa "><span class="fa fa-trash"></span></button>
                        </form>
                    </td>
                    <td> ( {{ raca.rodos }} )</td>
                    <td>
                        <a href="{{ path('drevos.rass.rods', {'id': raca.id}) }}">Смотреть</a>
                    </td>
                    <td>
                        <a href="{{ path('drevos.rass.rods.create', {'id': raca.id}) }}">Начать ввод паспортных данных</a>
                    </td>
                {% else %}
                    <td>{{ raca.title }}</td>
                    <td>{{ raca.name }}</td>
                    <td colspan="5"></td>
                {% endif %}
                </tr>

            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="box">
        <table>
            <tr>
                <th>
                    <a href="{{ path('drevos.rass.create') }}"
                       class="btnn btnn--mb0 btnn--pt btnn--rasa">Добавить название другой <strong class=" strongo--kras">
                            расы </strong>  в БД</a>
                </th>
            </tr>
        </table>
    </div>


{% endblock %}