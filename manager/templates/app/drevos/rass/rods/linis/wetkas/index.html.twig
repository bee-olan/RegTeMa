{% extends 'base.html.twig' %}

{% block title %}Ветка{% endblock %}


{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Главная</a></li>
{#        <li class="breadcrumb-item"><a href="{{ path('rodos.rasas', {'id':rasa.id}) }}">Раса</a></li>#}
        <li class="breadcrumb-item active">Добавить ветку </li>
    </ol>
{% endblock %}

{% block body %}

{#    {{ include('app/rods/rass/_tabs.html.twig') }}#}

    {% set token = csrf_token('delete') %}
    <h3 class="rasa__title  ">Родословная. Данные   из паспорта купленной матки</h3>

    <div class="box">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th  class="fon_td_es" >Раса</th>
                <th  class="fon_td_es" >Страна</th>
                <th  class="fon_td_es" >Матковод(код)</th>
                <th class="fon_td_es" >Линии</th>
                <th colspan="2" > Материнка</th>
                <th> Материнка трутня</th>
                <th> Матка </th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td class="fon_td_es">    {{ rasa }}</td>
                <td title = {{ stran.nomer }}  class="fon_td_es">  {{ stran.name}}  </td>
                <td  class="fon_td_es">    {{ rodo.nameMatkov }} / {{ rodo.kodMatkov }}</td>
                <td class="fon_td_es" >{{ linia.name }}</td>
                <td class="fon_td">ветка...</td>
                <td class="fon_td_no"></td>
                <td colspan="2" class="fon_td_no"></td>
            </tr>
            </tbody>
        </table>
    </div>


    <div class="box">

        <table class="table table-bordered table-hover">
            <thead>
            <tr>

                <th>Ветка</th>
                <th colspan="2"> редак-ть / удалить</th>
                <th colspan="3">Материнка - номер (к-во)</th>
            </tr>
            </thead>
            <tbody>
            {% for wetka in wetkas %}
                <tr>
                    <td> {{ wetka.name_w }}</td>

                    <td> <a href="{{ path('drevos.rass.rods.linis.wetkas.edit', {'id': linia.id, 'wetka_id': wetka.id}) }}"
                            class="btnn btnn--mb0 btnn--pt btnn--rasa"><span class="fa fa-pencil"></span></a>
                    </td>
                    <td>
                        <form action="{{ path('drevos.rass.rods.linis.wetkas.delete', {'id': linia.id, 'wetka_id': wetka.id}) }}"
                              method="post" onsubmit="return confirm('Подтверждаете - удалить?')">
                            <input type="hidden" name="token" value="{{ token }}" />
                            <button type="submit" class="btnn btnn--mb0 btnn--pt btnn--rasa "><span class="fa fa-trash"></span></button>
                        </form>
                    </td>
                   <td>{{ wetka.nomwets }}</td>
                    <td>
                        <a href="{{ path('drevos.rass.rods.linis.wetkas.nomwets', {'id': wetka.id}) }}">Смотреть номера на ветке</a>
                    </td>
                    <td>
                        <a href="{{ path('drevos.rass.rods.linis.wetkas.nomwets.create', {'id': wetka.id}) }}">Добавить номер на ветку</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    <div class = "rasa__content"  >
        <a href="{{ path('drevos.rass.rods.linis.wetkas.create', {'id': linia.id}) }}"
           class="btnn btnn--mb0 btnn--pt btnn--rasa">Добавить другую
            <strong class="strongo strongo--kras"> ветку </strong> в БД</a>
    </div>



{% endblock %}