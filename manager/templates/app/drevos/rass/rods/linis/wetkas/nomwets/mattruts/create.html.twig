{% extends 'base.html.twig' %}

{% block title %}Создать{% endblock %}

    {% block kroxii %}
        <a href="{{ path('home') }}">Главная</a>
        <a href="{{ path('drevos.rass') }}">Родословная</a>
        <span class="aktiv ">Расы</span>
    {% endblock %}

{% block body %}

    {{ include('app/drevos/_tabs.html.twig') }}

    <div class="box">
        <b class="dre_title "><strongo class="strongo--krox">Линия </strongo> - данные из паспорта или личных архивных данных</b>
    </div>

    <div class="box-smotrim">

        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th  class="fon_td_es" >Раса</th>
                <th  class="fon_td_es" >Страна</th>
                <th  class="fon_td_es" colspan="2" >Матковод(код)</th>
                <th class="fon_td_es" >Линии</th>
                <th class="fon_td_es" colspan="2"> Материнка</th>
                <th> Материнка трутня</th>
                <th></th>
                <th class="fon_td_no"> номер Матки  </th>
                <th  class="fon_td_no"> Заказал </th>
            </tr>
            </thead>
            <tbody>
                <tr>
                <td class="fon_td_es">   {{ rasa.title }}</td>
                <td class="fon_td_es">{{ stran.name }}</td>
                <td class="fon_td_es">{{ rodo.nameMatkov }}</td>
                <td class="fon_td_es">{{ rodo.kodMatkov }}</td>
                <td class="fon_td_es" >{{ linia.name }}</td>
                <td class="fon_td_es" >{{ wetka.nameW }}</td>
                <td class="fon_td_es" > {{ nomwet.titW }} </td>
                <td > </td>
                    <td > </td>
                <td colspan="2" class="fon_td_no"></td>
            </tr>
            {% for mattrut in mattruts %}
                <tr>
                    <td  colspan="7" > </td>

                    <td class="td_cent">
                        <strongo class="strongo--kras"> {{ mattrut.nameOt  }}</strongo>
                    </td>

                    <td> <a href="{{ path('drevos.rass.rods.linis.wetkas.nomwets.mattruts.noms.create', {'id': mattrut.id}) }}">
                            <button type="submit" class="btnn btnn--mb0 btnn--pt btnn--drev-es ">  Выбрать </button>
                        </a>
                    </td>

                    <td colspan="3" ></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% if mattruts is not empty %}
            <b ><strongo class="strongo--kras">Информация! </strongo> - если будет повтор названия т.е. данные есть
                в БД (см выше), то можно воспльзовться кнопкой "Выбрать" </b> </br>
            <b > Если повтора <strongo class="strongo--kras">не</strongo> будет- переходите к  вводу данных (см ниже)</b>
        {% endif %}
    </div>


    <div class="box-edit">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btnn btnn--mb0 btnn--pt btnn--drev-es">Добавить в БД</button>
            <a href="{{ path('drevos.rass.rods.linis.wetkas',{'id': linia.id}) }}"
                class="btnn btnn--ml3 btnn--pt btnn--drev-es"> Выйти из режима "Добавить"</a>
        {{ form_end(form) }}
	</div>


{% endblock %}