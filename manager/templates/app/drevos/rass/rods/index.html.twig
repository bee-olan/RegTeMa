{% extends 'base.html.twig' %}

{% block title %}Родословная{% endblock %}

{% block kroxii %}
    <a href="{{ path('home') }}">Главная</a>
    <a href="{{ path('drevos.rass') }}">Родословная</a>
    <a href="{{ path('drevos.rass', {'id':rasa.id} ) }}">Раса - {{ rasa.title }}</a>
    <span class="aktiv ">Добавить страну, матковода</span>
{% endblock %}



{% block body %}

    {{ include('app/drevos/_tabs.html.twig') }}

    {% set token = csrf_token('delete') %}


    <div class="box">

        <b class="dre_title ">Родословная - - <strongo class="strongo--krox">данные из паспорта </strongo>или личных архивных данных</b>
    </div>

    <div class="box-smotrim">

    {% if rodos is  empty %}

    <h1 class="drev-rod_title fon_td"> Пока для расы <strong class="strongo strongo--kras">{{ rasa.title }} </strong>
       - нет паспортных данных зарегистрированных маток.  </h1>

    {% else %}
{#    <div class="box-smotrim">#}

        <table class="table table-bordered table-hover td_cent">
            <thead>
            <tr >
                <th class="fon_td_es" >Раса  </th>
                <th>Страна</th>                
                <th>Матковод</th>
                <th> Код</th>
                <th class="fon_td" colspan="2"> редак-ть / удалить</th>
                <th class="fon_td_nado td_cent" colspan="2" >Линия </th>

            </tr>
            </thead>
            <tbody>
            {% for rodo in rodos %}
                <tr>
                    <td class="fon_td_es" > {{ rasa.title }}</td>
                    <td title = {{ rodo.strana }}> {{ rodo.str_nom}}  </td>               
                    <td>   {{ rodo.name_matkov }} </td>
                    <td>   {{ rodo.kod_matkov }}</td>
                    <td class="fon_td">
                        <a href="{{ path('drevos.rass.rods.edit', {'id': rasa.id, 'rodo_id': rodo.id}) }}"
                          ><span class="fa fa-pencil"></span></a>
                    </td>
                    <td class="fon_td">
                        <form action="{{ path('drevos.rass.rods.delete', {'id': rasa.id, 'rodo_id': rodo.id}) }}"
                              method="post" onsubmit="return confirm('Подтверждаете - удалить?')">
                            <input type="hidden" name="token" value="{{ token }}" />
                            <span class="fa fa-trash"></span></button>
                        </form>
                    </td>
{#                     <td > {{ rodo.linias }}  </td>#}
                    <td  >
                        <a href="{{ path('drevos.rass.rods.linis', {'id': rodo.id}) }}">
                            <button type="submit" class="btnn btnn--mb0 btnn--pt btnn--drev ">  Смотреть  ({{ rodo.linias }}) </button>

                        </a>
                    </td>
                    <td  >
                       <a href="{{ path('drevos.rass.rods.linis.create', {'id': rodo.id}) }}">
                           <button type="submit" class="btnn btnn--mb0 btnn--pt btnn--drev ">  Продолжить </button>
                       </a>
                   </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% endif %}

    </div>

    <div class = "drev-rod_title"  > Данные о матководе
        <a href="{{ path('drevos.rass.rods.create', {'id': rasa.id}) }}"
           class="btnn btnn---ml3 btnn--mt0 btnn--pt btnn--drev-es">Ввод данных
            </a>
    </div>



{% endblock %}