		<li class="breadcrumb-item"><a href="{{ path('drevos.rass') }}">Раса -- {{ rasa.title }}</a></li>
		<li class="breadcrumb-item active">Редактировать</li>
	</ol>
{% endblock %}

{% block body %}
<article class="rasa">
<h1 	class="rasa__title  "><strong> Раса </strong>:  {{ rasa.name }}</h1>
