{% extends 'base.html.twig' %}

{% block title %}Участники{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Главная</a></li>
        <li class="breadcrumb-item"><a href="{{ path('matkis') }}">Работа</a></li>
        <li class="breadcrumb-item"><a href="{{ path('matkis.u4astniks') }}">Участники</a></li>
    </ol>
{% endblock %}

{% block body %}

    {{ include('app/matkis/u4astniks/_tabs.html.twig') }}

    <div class="card">
        <div class="card-body">

            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-2">{{ form_widget(form.name) }}</div>
                <div class="col-md-2">{{ form_widget(form.email) }}</div>
                <div class="col-md-2">{{ form_widget(form.group) }}</div>
                <div class="col-md-2">{{ form_widget(form.status) }}</div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Фильтр</button>
                    <a href="{{ path('matkis.u4astniks') }}" class="btn btn-outline-secondary">Сбросить</a>
                </div>
            </div>
            {{ form_end(form) }}

        </div>
    </div>

    <div class="box">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Ф.И. или Ник', 'name') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Эл-почта', 'email') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Группа', 'group') }}</th>
                <th>Projects</th>
                <th>{{ knp_pagination_sortable(pagination, 'Статус', 'status') }}</th>
            </tr>
            </thead>
            <tbody>
            {% for u4astnik in pagination %}
                <tr>
                    <td>
                    {# a href="{{ path('matkis.u4astniks.show', {'id': u4astnik.id}) }}">{{ u4astnik.name }}</a> #}
                    {{ u4astnik.name }}
                    </td>
                    <td>{{ u4astnik.email }}</td>
                    <td>{{ u4astnik.group }}</td>
                    {# <td>{{ u4astnik.memberships_count }}</td> #}
                    <td>-------------------</td>
                    <td>{{ u4astnik_status(u4astnik.status) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}