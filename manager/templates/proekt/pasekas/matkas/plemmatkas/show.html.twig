{% extends 'proekt/base.html.twig' %}

{% block title %}{{ plemmatka.name }}{% endblock %}

    {% block kroxii %}
        <a href="{{ path('proekt') }}">Главная</a>
        <a href="{{ path('proekt.pasekas.matkas') }}">Список ПлемМаток</a>             
        <span class="aktiv ">{{ plemmatka.name }}</span> 
        <span class="aktiv ">Расшифровка сокращенных названий</span> 
    {% endblock %}

{% block bodyy %} 

<div  class="  proekts-plem">

    <div class="inklud">

        <div class="inklud__img  ">
            <img class="" src="{{ asset('assets/proekt/images/zamok.png') }}" alt="">           
        </div>

        <div class="inklud__title inklud__title--plem teni">
           Расшифровка сокращенных названий   ПлемМатки
        </div> 
    </div>


        <div class="plem plem__jus-se">
            <a href="{{ path('proekt.pasekas.matkas'  ) }}"
               class="btnn btnn--mb0 btnn--col"> Список ПлемМаток с <strong class="strongo strongo--kras"> выбранным сезоном </strong> .
            </a>
            <a href="{{ path('proekt.pasekas.matkas.plemmatkas.redaktorss.show', {'plemmatka_id' : plemmatka.id}  ) }}"
               class="btnn btnn--mb0 btnn--col">
                .. к выбору  <strong class="strongo strongo--kras">сезонов </strong> 
            </a>
            <a href="{{ path('proekt.pasekas.matkas.plemmatkas.redaktorss.show', {'plemmatka_id' : plemmatka.id}  ) }}"
               class="btnn btnn--mb0 btnn--col">
                .. к  объявлению <strong class="strongo strongo--kras">ДочьМаток </strong>
            </a>
           
        </div>

        <div class="proekts-plr" >

            {% if sesMessages %}
            {% for sesMessage in sesMessages %}
                <div class="wstavka wstavka--uch back-color-uch">
                    <h2 class = "personaa__title " >{{ sesMessage }} </h2>
                </div>
                {% endfor %}
            {% endif %}

            <h1 class="plem__title  ">{{ plemmatka.name }} : {{ plemmatka.otecNomer.linia.name }}  -- все данные ПлемМатки</h1>



            <ul class="plem plem__jus-st ">
                <li class="plem__name plem-nomer" >{{plemmatka.nomer.linia.rasa.name}}_</li>
                <li class="plem__name plem__name--wid20"> Раса : &nbsp; &nbsp;   <strong class="strongo "> {{plemmatka.nomer.linia.rasa.title}}</strong></li>
            </ul>
            <ul class="plem plem__jus-st">
                <li class="plem__name  plem-nomer" >  <strong class="strongo  strongo--kras">{{plemmatka.sort}} : </strong></li>
                <li class="plem__name plem__name--wid20" >нумерация - создается программно отдельно для  каждой расы </li>
            </ul>


            <ul class="plem plem__jus-st ">
                <li class="plem__name plem-nomer" >{{plemmatka.nomer.linia.nameStar}}-{{plemmatka.nomer.name}} :</li>
                <li class="plem__name plem__name--wid20"> Линия - Ветка - Номер - год выхода матка</li>
            </ul>


            <ul class="plem plem__jus-st">
                <li class="plem__name plem-nomer" >{{ plemmatka.mesto.nomer }}_</li>
                <li class="plem__name plem__name--wid20" >Место пасеки : &nbsp; &nbsp;  <strong class="strongo "> {{ infaMesto[0].okrug }} - {{ infaMesto[0].oblast }} - {{ infaMesto[0].raion }} </strong></li>
            </ul>

            <ul class="plem plem__jus-st ">
                <li class="plem__name plem-nomer" >пн-{{plemmatka.persona.nomer}} : </li>
                <li class="plem__name plem__name--wid20"> Персональный номер матковода&nbsp; &nbsp;   </li>
            </ul>
            {% if  plemmatka.otecNomer.linia.name  %}
                <ul class="plem plem__jus-st ">
                    <li class="plem__name plem-nomer" >{{ plemmatka.otecNomer.linia.name }}</li>
                    <li class="plem__name plem__name--wid20"> отцовская линия</li>
                </ul>
            {% else %}
                <ul class="plem plem__jus-st ">
                    <li class="plem__name plem-nomer" >{{ plemmatka.kategoria.name }}_</li>
                    <li class="plem__name plem__name--wid20"> Катеория -- пояснения внизу этой  странички</li>
                </ul>
            {% endif %}

            <ul class="plem plem__jus-st">
                <li class="plem__name plem-nomer" >{{ plemmatka_status(plemmatka.status.name) }}  </li>
                <li class="plem__name plem__name--wid20" >-- статус ПлемМатки на данный момент  </li>
            </ul>


        </div>
</div> 

{% include('proekt/pasekas/matkas/kategor/_kategor-includ.html.twig') %}


{% endblock %}