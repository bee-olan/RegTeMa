{% extends 'proekt/base.html.twig' %}

{% block title %}Группы{% endblock %}



{% block kroxii %}
    <a href="{{ path('proekt') }}">Главная</a>
    <a href="{{ path('proekt.pasekas.uchasties.uchastiee') }}">Стать участником</a>
    <a href="{{ path('proekt.pasekas.uchasties') }}">Список участников</a>
    <span class="aktiv">Группы</span>

{% endblock %}


{% block bodyy %}

<div  class="proekts-group">

    {% include('proekt/pasekas/uchasties/_uchastiess-includ.html.twig') %}
    <div class="uchasties">
        <div class="uchasties__left">

            <div class="tabll">
                <ul class = "uch-tabl__list uch-color">

                    <li class = "uch-tabl__list-li uch-tabl__linia">Название</li>
                    <li class = "uch-tabl__list-li uch-tabl__linia" >Кол-во участников</li>
                </ul>

                {% for group in groups %}

                    <ul class = "uch-tabl__list">

                        <li class = "uch-tabl__list-li ">
                            {% if group.uchasties %}
                                <a  class="uch-tabl__link" href="{{ path('proekt.pasekas.uchasties', {'form': {'group': group.id}}) }}">{{ group.name }}</a>
                            {% else %}
                                {{ group.name }}
                            {% endif %}
                        </li>
                        <li class = "uch-tabl__list-li uch-tabl__linia"> {{ group.uchasties }}</li>

                    </ul>

                {% endfor %}

            </div>
        </div>
    </div>
</div>

{% endblock %}