{% extends 'proekt/base.html.twig' %}

{% block title %}Линия{% endblock %}

{% block sidebar %}              
    {% include('proekt/pasekas/matkas/side/_side_plem_linia.html.twig') %}
{% endblock %}

{% block kroxii %}
    <a href="{{ path('proekt') }}">Главная</a>
    <a href="{{ path('proekt.pasekas.matkas.plemmatkas.creates') }}">Рег-ция ПлемМатки</a>
    <a href="{{ path('proekt.pasekas.rasas.plemmatka') }}">Выбoр Расы</a>
    <span class="aktiv ">Раса: {{ rasa.name }} : Линии - Ветки</span>
{% endblock %}

{% block bodyy %}

<div  class="proekts proekts--rasa">

    {% include('proekt/pasekas/rasas/_rasa-includ.html.twig') %}

    <div class="proekts-plr  "> 
        <ul class="ras__data">
            <li >
                <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-check2" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
                </svg>
            </li>
            <li class="ras__name   ">
                <strong class="strongo strongo--kras">{{ rasa.name }}_</strong> -- раса {{ rasa.title }}
            </li>
        </ul>    
    
    </div>    
    <div class="lini ">
        <div class="lini-margin ">
            {% if linias %}
                <h1 class="ras__title "> <strong class="strongo " >Линии - Ветки   </strong>  : данные из БД  для   <strong class="strongo strongo--kras" >  {{ rasa.name }} </strong></h1>

                        {% for linia in linias %}
                            <ul class="ras__data">
                                {% if linia.vetka_id %}
                                    {% set foos = linia.name_star|split('-') %}
                                    <li class="rasa__name rasa__name--wid30">
                                        {% for i in 1..foos|length-1 %}
                                           <img  style="margin-bottom: 2px" src="{{ asset('assets/proekt/images/strelka-p.png') }}" alt="редактировать">

                                        {% endfor %}
{#                                          {{foos[0] }}-{{ foos|last}}#}
                                         <strong class="strongo "> ветка </strong> {{ linia.name_star }}  ( {{ linia.nomers }} )
                                    </li>
                                    <li >
                                        {% if linia.nomers > 0.1 %}
                                            <a href="{{ path('proekt.pasekas.rasas.linias.nomers.plemmatka', {'ras': rasa.id, 'linia_id': linia.id}) }}" class="btnn btnn--pt btnn--ml3 btnn--col-ras"  >
                                                 <strong class="strongo strongo--kras"> {{ linia.title }}</strong>
                                            </a>
                                        {% else %}
                                            - - <strong class="strongo "> {{ linia.title }} </strong> -  дочерних <strong class="strongo strongo--kras">  нет! </strong> Пишите запрос.
                                        {% endif %}
                                    </li>

                                {% else %}
                                    <li class="ras__name ras__name--widt30">
                                       {{ linia.name_star }} ( {{ linia.nomers }} )
                                    </li>
                                    <li>
                                        <a href="{{ path('proekt.pasekas.rasas.linias.nomers.plemmatka', {'ras': rasa.id, 'linia_id': linia.id}) }}" class="btnn btnn--pt btnn--ml3 btnn--col-ras"  >
                                           линия
                                        </a>
                                    </li>
                                {% endif %}
{#                            <ul class="ras__data">#}
{#                                <li  class="ras__name  ">  {{ linia.name_star }}   ( {{ linia.nomers }} )</li>#}
{#                                <li >#}
{#                                    <a href="{{ path('proekt.pasekas.rasas.linias.nomers.plemmatka', {'ras': rasa.id, 'linia_id': linia.id}) }}" class="btnn btnn--pt btnn--ml3 btnn--col-ras"  >#}
{#                                       ветка  <strong class="strongo strongo--kras">#}
{#                                            {{ linia.name }}#}
{#                                            {{foos[0] }}-{{ foos|last}}#}
{#                                        </strong>#}
{#                                    </a>#}
{#                                </li>#}
                               
                            </ul>
                        {% endfor %}
            {% else %}
                <h1 class="ras__title "> <strong class="strongo strongo--kras " >Напишите запрос :   </strong> <strong class="strongo " > Раса - Линия - Ветка - Номер   </strong>  </h1>
            {% endif %}
        </div>         
    </div>
    
</div><!-- rasas -->

    {# ----------------------- #}



    <div  class="proekts proekts--rasa">
        <div class="proekts-plr  ">
            <h1 class="ras__title  ">Написать запрос на недостающие названия  Раса - Линия - Ветка - Номер</h1>

            <div class="mesto-form__header  ">
                <div class="mesto-form ">
                                    {{ form_start(commentForm) }}

                                    {{ form_widget(commentForm) }}

                    <button type="submit" class="btnn  btnn--mb0 btnn--pt">Отправить</button>
                                    {{ form_end(commentForm) }}

                </div>
            </div>
        </div>
    </div>
    <div  class="proekts proekts--rasa">
        <div class="proekts-plr  ">
            <h3 class="ras__title">Запросы на недостающие названия  Раса - Линия - Ветка - Номер</h3>
            {% if comments|length %}
                <div class="card-body">
                    <div class="direct-chat">
                        <div class="direct-chat-messages">
                            {% for comment in comments %}
                                <div class="direct-chat-msg">
                                    <div class="direct-chat-info clearfix">
                                        <span class="direct-chat-name pull-left">{{ comment.author_nike }}</span>
                                        <span class="direct-chat-timestamp pull-right">{{ comment.date|date('Y-m-d H:i:s') }}</span>
                                    </div>
                                    <img class="direct-chat-img" src="{{ gravatar(comment.author_email, 40) }}" alt="">
                                    <div class="direct-chat-text direct-chat-text--rasa">
                                        {{ comment.text|markdown|purify|adminka_processor }}
                                        {% if is_granted('manage', comment) %}
                                            <div class="controls-m ">
                                                <a href="{{ path('proekt.pasekas.rasas.linias.comment.edit',
                                                    {'rasa_id': rasa.id, 'id': comment.id}) }}"
                                                   class="btnn btnn--mb0 btnn--pt btnn--col-golub">
                                                    <div class="karandash karandash--child">
                                                        <img src="{{ asset('assets/proekt/images/karandash.png') }}" alt="редактировать">
                                                    </div>
                                                </a>
                                                <form action="{{ path('proekt.pasekas.rasas.linias.comment.delete', {'rasa_id': rasa.id, 'id': comment.id}) }}" method="post" onsubmit="return confirm('Are you sure?')">
                                                    <input type="hidden" name="token" value="{{ csrf_token('delete-comment') }}" />
                                                    <button type="submit"  class="btnn  btnn--ml3 btnn--pt btnn--col-golub">

                                                        <div class="karandash karandash--child">
                                                            <img src="{{ asset('assets/proekt/images/delet.png') }}" alt="удалить">
                                                        </div>
                                                    </button>
                                                </form>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
